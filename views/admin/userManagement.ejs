        <script>


        //Blocking Confirmation    

        function blockUser(userId) {
        console.log(userId);
        Swal.fire({
        title: "Are you sure?",
        text: "Do you really want to Block this user",
        icon: "warning",
        showCancelButton: true,
        confirmButtonColor: "#3085d6",
        cancelButtonColor: "#d33",
        confirmButtonText: "Yes, Block it!"
    }).then((result) => {
        if (result.isConfirmed) {
            fetch(`/admin/blockUser/${userId}`, { method: "PUT" })
                .then(res => {
                    if (res.ok) {
                        Swal.fire({
                            title: "Blocked!",
                            text: "The user has been Blocked.",
                            icon: "success"
                        }).then(() => {
                            window.location.reload();
                        });
                    } else {
                        Swal.fire({
                            position: "center",
                            icon: "error",
                            title: "Something went wrong",
                            showConfirmButton: false,
                            timer: 1500
                        });
                    }
                }).catch(error => {
                    console.error("Error Blocking user:", error);
                    Swal.fire({
                        position: "center",
                        icon: "error",
                        title: "Something went wrong",
                        showConfirmButton: false,
                        timer: 1500
                    });
                });
        } else {
            Swal.fire({
                position: "center",
                icon: "error",
                title: "Blocking canceled",
                showConfirmButton: false,
                timer: 1500
            });
        }
    });
}

    //unBlocking Confirmation


    function unBlockUser(userId) {
        console.log(userId);
        Swal.fire({
        title: "Are you sure?",
        text: "Do you really want to unBlock this user",
        icon: "warning",
        showCancelButton: true,
        confirmButtonColor: "#3085d6",
        cancelButtonColor: "#d33",
        confirmButtonText: "Yes, UnBlock it!"
    }).then((result) => {
        if (result.isConfirmed) {
            fetch(`/admin/unBlockUser/${userId}`, { method: "PUT" })
                .then(res => {
                    if (res.ok) {
                        Swal.fire({
                            title: "UnBlocked!",
                            text: "The user has been UnBlocked.",
                            icon: "success"
                        }).then(() => {
                            window.location.reload();
                        });
                    } else {
                        Swal.fire({
                            position: "center",
                            icon: "error",
                            title: "Something went wrong",
                            showConfirmButton: false,
                            timer: 1500
                        });
                    }
                }).catch(error => {
                    console.error("Error Blocking user:", error);
                    Swal.fire({
                        position: "center",
                        icon: "error",
                        title: "Something went wrong",
                        showConfirmButton: false,
                        timer: 1500
                    });
                });
        } else {
            Swal.fire({
                position: "center",
                icon: "error",
                title: "UnBlocking canceled",
                showConfirmButton: false,
                timer: 1500
            });
        }
    });
}
