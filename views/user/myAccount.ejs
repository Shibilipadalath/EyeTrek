                                            <div class="card">
                                                <div class="card-header">
                                                    <h5 class="mb-0">Your Orders</h5>
                                                </div>
                                                <div class="card-body">
                                                    <div class="table-responsive">
                                                        <% if (orderDetails && orderDetails.length > 0) { %>
                                                            <table class="table">
                                                                <thead>
                                                                    <tr>
                                                                        <th>Order</th>
                                                                        <th>Date</th>
                                                                        <th>Status</th>
                                                                        <th>Total</th>
                                                                        <th>Actions</th>
                                                                    </tr>
                                                                </thead>
                                                                <tbody>
                                                                    <% orderDetails.forEach((order, index) => { %>
                                                                        <tr>
                                                                            <td><%= (orderPage - 1) * 5 + index + 1 %></td>
                                                                            <td> <%= new Date(order.createdAt).toLocaleString() %></td>
                                                                            <td><%= order.status %></td>
                                                                            <td>₹<%= (order.totalPrice).toFixed(2) %> for <%= order.cartItems.length %> item(s)</td>
                                                                            <td><a href="/order/<%= order._id %>" class="btn-small d-block">View</a></td>
                                                                        </tr>
                                                                    <% }) %>
                                                                </tbody>
                                                            </table>
                                                        <% } else { %>
                                                            <p>No orders found.</p>
                                                        <% } %>
                                                    </div>
                                                    <!-- Pagination for Orders -->
                                                    <% if (totalOrderPages > 1) { %>
                                                        <nav aria-label="Page navigation">
                                                            <ul class="pagination justify-content-center">
                                                                <% if (orderPage > 1) { %>
                                                                    <li class="page-item">
                                                                        <a class="page-link" href="?orderPage=<%= orderPage - 1 %>">Previous</a>
                                                                    </li>
                                                                <% } %>
                                                                <% for (let i = 1; i <= totalOrderPages; i++) { %>
                                                                    <li class="page-item <%= orderPage === i ? 'active' : '' %>">
                                                                        <a class="page-link" href="?orderPage=<%= i %>"><%= i %></a>
                                                                    </li>
                                                                <% } %>
                                                                <% if (orderPage < totalOrderPages) { %>
                                                                    <li class="page-item">
                                                                        <a class="page-link" href="?orderPage=<%= orderPage + 1 %>">Next</a>
                                                                    </li>
                                                                <% } %>
                                                            </ul>
                                                        </nav>
                                                    <% } %>
                                                </div>                                                   
                                            </div>
                                        </div>

                                        <!-- wallet -->

                                        <div class="tab-pane fade" id="wallet" role="tabpanel" aria-labelledby="track-orders-tab">
                                            <div class="card">
                                                <div class="card-header">
                                                    <h5 class="mb-0">Wallet Management</h5>
                                                </div>
                                                <div class="card-body contact-from-area">
                                                    <p>Your current balance: ₹<%= Userwallet ? Userwallet.balance : 0 %></p>
                                                    <form id="add-money-form">
                                                        <div class="input-style mb-20">
                                                            <label>Amount to Add</label>
                                                            <input name="amount" id="amount" placeholder="Enter amount" type="number" class="square" required>
                                                        </div>
                                                        <button type="button" class="submit submit-auto-width" id="rzp-button">Add Money</button>
                                                    </form>
                                                    <hr>
                                                    <h5 class="mt-3">Transaction History</h5>
                                                    <div class="table-responsive">
                                                        <table class="table">
                                                            <thead>
                                                                <tr>
                                                                    <th>Date</th>
                                                                    <th>Amount</th>
                                                                    <th>Type</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody id="transaction-history">
                                                                <% if (Userwallet && Userwallet.history && Userwallet.history.length > 0) { %>
                                                                    <% Userwallet.history.forEach((transaction) => { %>
                                                                        <tr>
                                                                            <td><%= new Date(transaction.createdAt).toLocaleString() %></td>
                                                                            <td>₹<%= transaction.amount.toFixed(2) %></td>
                                                                            <td><%= transaction.type %></td>
                                                                        </tr>
                                                                    <% }) %>
                                                                <% } else { %>
                                                                    <tr>
                                                                        <td colspan="3">No transactions found.</td>
                                                                    </tr>
                                                                <% } %>
                                                            </tbody>
                                                        </table>
